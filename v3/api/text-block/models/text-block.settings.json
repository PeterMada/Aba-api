{
  "kind": "collectionType",
  "collectionName": "text_blocks",
  "info": {
    "name": "Text Block",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Perex": {
      "type": "text"
    },
    "Text": {
      "type": "richtext",
      "required": true
    },
    "ButtonText": {
      "type": "string"
    },
    "ExternalUrl": {
      "type": "string"
    },
    "PageTarget": {
      "model": "page"
    },
    "BackgroundColor": {
      "type": "string",
      "default": "#FFFFFF",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    }
  }
}
